<div id="titleBarLeft">
    @if(menuExpanded)
    {
        <svg id="hamburgerMenuButton" @onclick="ToggleMenu" class="icon"><use xlink:href="#closeHamburgerMenu"/></svg>                
    }
    else
    {
        <svg id="hamburgerMenuButton" @onclick="ToggleMenu" class="icon"><use xlink:href="#hamburgerMenu"/></svg>        
    }
    <span class="GakuGymMark">GakuGym</span>
</div>
<div id="titleBar">
</div>

<div id="sideNavPanel" class="@(menuExpanded ? "menuExpanded" : "menuCollapsed")">
    <span id="sideNavHeader" class="MainMenuHeader">
        <svg id="hamburgerMenuButton" class="icon"><use xlink:href="#closeHamburgerMenu"/></svg>
        <span class="GakuGymMark">GakuGym</span>
    </span>            
    <nav class="SideNav">
        <NavLink id="factDatabaseNavItem" href="/fact-database">Fact Database</NavLink>
        <NavLink id="studiesNavItem" href="/studies">Studies</NavLink>
    </nav>
</div>

<div id="content" class="@(menuExpanded ? "menuExpanded" : "menuCollapsed")">
    @Body
</div>
<Notifier></Notifier>
@code
{
    bool menuExpanded = true;

    void ToggleMenu()
    {
        menuExpanded = !menuExpanded;
    }
}